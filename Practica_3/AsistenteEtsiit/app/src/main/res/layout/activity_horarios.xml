<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HorariosActivity">


    <Button
        android:id="@+id/button_horario"
        android:layout_width="323dp"
        android:layout_height="68dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="184dp"
        android:text="Buscar Horario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_horario"
        android:layout_width="369dp"
        android:layout_height="404dp"
        android:scaleType="fitCenter"
        android:src="@drawable/no_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_horario"
        tools:srcCompat="@tools:sample/avatars" />

    <Spinner
        android:id="@+id/spinnerCurso"
        android:layout_width="129dp"
        android:layout_height="62dp"
        android:layout_marginEnd="272dp"
        android:layout_marginBottom="92dp"
        app:layout_constraintBottom_toTopOf="@+id/button_horario"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinnerGrupo"
        android:layout_width="129dp"
        android:layout_height="62dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="92dp"
        app:layout_constraintBottom_toTopOf="@+id/button_horario"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinnerCuatri"
        android:layout_width="129dp"
        android:layout_height="62dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="92dp"
        app:layout_constraintBottom_toTopOf="@+id/button_horario"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>