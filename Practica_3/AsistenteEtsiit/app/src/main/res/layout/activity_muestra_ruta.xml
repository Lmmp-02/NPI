<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MuestraRutaActivity">

    <ImageView
        android:id="@+id/mr_imagebruj"
        android:layout_width="341dp"
        android:layout_height="428dp"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mr_vacio"
        android:layout_width="293dp"
        android:layout_height="380dp"
        android:layout_marginTop="59dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mr_imagecam"
        android:layout_width="283dp"
        android:layout_height="370dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mr_textcam"
        android:layout_width="341dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mr_imagecam" />

    <TextView
        android:id="@+id/mr_textact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:text="@string/mr_indice"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/mr_boton_atras"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="25dp"
        android:drawableLeft="@drawable/baseline_arrow_back_24"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/mr_boton_adelante"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="25dp"
        android:drawableRight="@drawable/baseline_arrow_forward_24"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>